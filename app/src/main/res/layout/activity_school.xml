<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/row_item_margin_vertical"
    android:paddingStart="@dimen/row_item_margin_horizontal"
    android:paddingEnd="@dimen/row_item_margin_horizontal"
    android:paddingLeft="@dimen/row_item_margin_horizontal"
    android:paddingRight="@dimen/row_item_margin_horizontal"
    tools:context=".ui.SchoolActivity">

    <TextView
        android:id="@+id/school_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/school_description_size"
        android:paddingBottom="@dimen/row_item_margin_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute"
        tools:text="A collection of samples to discuss and showcase different architectural tools and patterns for Android apps." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Num of sat test takers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/school_description" />

    <TextView
        android:id="@+id/num_of_sat_test_takers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/processing"
        app:layout_constraintStart_toStartOf="@+id/sat_critical_reading_avg_score"
        app:layout_constraintTop_toBottomOf="@+id/school_description" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sat critical reading avg score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/num_of_sat_test_takers" />

    <TextView
        android:id="@+id/sat_critical_reading_avg_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/row_item_margin_horizontal"
        android:layout_marginStart="@dimen/row_item_margin_horizontal"
        android:text="@string/processing"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/num_of_sat_test_takers" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sat math avg score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sat_critical_reading_avg_score" />

    <TextView
        android:id="@+id/sat_math_avg_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/processing"
        app:layout_constraintStart_toStartOf="@+id/sat_critical_reading_avg_score"
        app:layout_constraintTop_toBottomOf="@+id/sat_critical_reading_avg_score" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sat writing avg score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sat_math_avg_score" />

    <TextView
        android:id="@+id/sat_writing_avg_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/processing"
        app:layout_constraintStart_toStartOf="@+id/sat_math_avg_score"
        app:layout_constraintTop_toBottomOf="@+id/sat_math_avg_score" />


</androidx.constraintlayout.widget.ConstraintLayout>